<resources>


    <style name="PuppysMainTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorText</item>
        <item name="colorButtonNormal">@color/buttonNormal</item>
        <item name="colorControlHighlight">@color/colorAccent</item>


    </style>

    <style name="PuppysMainTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PuppysMainTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PuppysMainTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
