<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dev.eyesless.needmypuppy.MainActivity">

        <TextView
            android:id="@+id/opt_starttext"
            android:layout_width="0dp"
            app:layout_constraintWidth_default="spread"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:text="@string/say_me_age"
            android:textSize="@dimen/text_size_small"
            app:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_chainStyle="packed" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            app:layout_constraintHeight_default="spread"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/guideline4"
            app:layout_constraintTop_toBottomOf="@+id/opt_starttext"
            app:layout_constraintWidth_default="spread"
            app:layout_gravity="fill"
            app:srcCompat="@drawable/playing_puppys"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.523" />

        <Button
            android:id="@+id/button_block1"
            android:layout_width="0dp"
            app:layout_constraintWidth_default="spread"
            android:layout_height="0dp"
            app:layout_constraintHeight_default="wrap"
            android:text="@string/btn_block1"
            android:textSize="@dimen/text_size_small"
            android:gravity="center_vertical|right"
            android:layout_marginRight="-1dp"
            app:layout_constraintRight_toRightOf="@+id/opt_starttext"
            app:layout_constraintBottom_toTopOf="@+id/button_block2"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline4"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_chainStyle="packed" />

        <ImageView
            android:id="@+id/dog_to_you_image"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:srcCompat="@drawable/ic_warning_yello_36dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/button_block1"
            app:layout_constraintBottom_toBottomOf="@+id/button_block1"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="@+id/button_block1"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/button_block2"
            android:layout_width="0dp"
            app:layout_constraintWidth_default="spread"
            android:layout_height="0dp"
            app:layout_constraintHeight_default="wrap"
            android:text="@string/btn_block2"
            android:textSize="@dimen/text_size_small"
            android:gravity="center_vertical|right"
            app:layout_constraintRight_toRightOf="@+id/button_block1"
            app:layout_constraintTop_toBottomOf="@+id/button_block1"
            app:layout_constraintBottom_toTopOf="@+id/button_block3"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline4"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:id="@+id/you_to_dog_image"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:srcCompat="@drawable/ic_warning_yello_36dp"
            app:layout_constraintTop_toTopOf="@+id/button_block2"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/button_block2"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/button_block2" />

        <Button
            android:id="@+id/button_block3"
            android:layout_width="0dp"
            app:layout_constraintWidth_default="spread"
            android:layout_height="0dp"
            app:layout_constraintHeight_default="wrap"
            android:text="@string/btn_block3"
            android:textSize="@dimen/text_size_small"
            android:gravity="center_vertical|right"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/button_block2"
            app:layout_constraintBottom_toTopOf="@+id/button_opt2"
            app:layout_constraintTop_toBottomOf="@+id/button_block2"
            android:layout_marginEnd="1dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline4"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="16dp" />

        <ImageView
            android:id="@+id/infrastructure_image"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:srcCompat="@drawable/ic_warning_yello_36dp"
            app:layout_constraintTop_toTopOf="@+id/button_block3"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/button_block3"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/button_block3" />

        <Button
            android:id="@+id/button_opt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_opt2"
            app:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp" />

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

        <android.support.v4.widget.DrawerLayout
            android:id="@+id/drawer_main"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

                <ListView
                    android:id="@+id/list_drawer_main"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:choiceMode="singleChoice"
                    android:divider="@color/colorAccent"
                    android:background="@color/buttonNormal"
                    android:dividerHeight="0dp"
                    >

                </ListView>

        </android.support.v4.widget.DrawerLayout>


</android.support.constraint.ConstraintLayout>
