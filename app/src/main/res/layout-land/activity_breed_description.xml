<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:foregroundGravity="center"
tools:context="dev.eyesless.needmypuppy.BreedDescriptionActivity">


<ImageView
    android:id="@+id/breed_image"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:srcCompat="@drawable/empty"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintRight_toLeftOf="@+id/guideline2"
    app:layout_constraintBottom_toTopOf="@+id/breed_title"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="24dp"
    app:layout_constraintVertical_chainStyle="spread_inside" />

<TextView
    android:id="@+id/breed_title"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="@string/no_data"
    android:textSize="@dimen/text_size"
    android:gravity="center"
    app:layout_constraintTop_toBottomOf="@+id/breed_image"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/guideline2"
    android:layout_marginRight="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintHorizontal_bias="0.0"
    android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/breed_descript"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/no_data"
        android:textSize="@dimen/text_size"
        android:gravity="left"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintVertical_bias="0.497" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.48"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="284dp" />


</android.support.constraint.ConstraintLayout>
