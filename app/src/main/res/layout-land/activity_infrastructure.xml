<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dev.eyesless.needmypuppy.Infrastructure">

    <TextView
        android:id="@+id/textView_top"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="wrap"
        android:layout_height="0dp"
        android:text="@string/intro_about_infrastructure"
        android:textSize="@dimen/text_size"
        android:gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginRight="8dp" />

    <ImageView
        android:id="@+id/imageView_main"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="wrap"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="wrap"
        app:srcCompat="@drawable/about_infrastructure_image"
        app:layout_constraintTop_toBottomOf="@+id/textView_top"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline4"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/opt_switch"
        android:layout_width="wrap_content"
        app:layout_constraintWidth_default="wrap"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:checked="false"
        android:text="@string/switch_about"
        android:textOff="@string/no"
        android:textOn="@string/yes"
        android:textSize="@dimen/text_size_small"
        app:layout_gravity="fill"
        app:showText="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button_complete"
        app:layout_constraintTop_toTopOf="@+id/imageView_main"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.503"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_complete"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="296dp" />


</android.support.constraint.ConstraintLayout>
