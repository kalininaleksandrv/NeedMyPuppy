<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundGravity="center"
    tools:context="dev.eyesless.needmypuppy.BreedDescriptionActivity">


    <ImageView
        android:id="@+id/breed_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/empty"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/def_merge"
        android:layout_marginLeft="@dimen/def_merge"
        android:layout_marginRight="@dimen/def_merge" />

    <TextView
        android:id="@+id/breed_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/no_data"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/breed_image"
        android:layout_marginLeft="@dimen/def_merge"
        android:layout_marginRight="@dimen/def_merge" />

    <TextView
        android:id="@+id/breed_descript"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/no_data"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/breed_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/def_merge"
        android:layout_marginRight="@dimen/def_merge" />


</android.support.constraint.ConstraintLayout>
