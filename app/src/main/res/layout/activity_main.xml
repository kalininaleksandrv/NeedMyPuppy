<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dev.eyesless.needmypuppy.MainActivity">

        <TextView
            android:id="@+id/opt_starttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:text="@string/say_me_age"
            android:textSize="@dimen/text_size"
            app:layout_gravity="center"
            app:layout_row="0"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.625"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintLeft_toLeftOf="@+id/opt_starttext"
            app:layout_constraintTop_toBottomOf="@+id/opt_starttext"
            app:layout_gravity="fill"
            app:srcCompat="@drawable/playing_puppys"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            app:layout_constraintRight_toRightOf="@+id/opt_starttext"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/opt_switch"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:checked="false"
            android:text="@string/switch_about"
            android:textOff="@string/no"
            android:textOn="@string/yes"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintBottom_toTopOf="@+id/button_opt1"
            app:layout_gravity="fill"
            app:showText="true"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <Spinner
            android:id="@+id/spinner_exp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintLeft_toLeftOf="@+id/opt_starttext"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_gravity="fill"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintRight_toRightOf="@+id/opt_starttext" />

        <Spinner
            android:id="@+id/spinner_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/opt_starttext"
            app:layout_constraintTop_toBottomOf="@+id/spinner_exp"
            android:textSize="@dimen/text_size_small"
            app:layout_gravity="fill"
            android:layout_marginTop="8dp"
            app:layout_constraintRight_toRightOf="@+id/opt_starttext"
            app:layout_constraintHorizontal_bias="0.0" />



        <TextView
            android:id="@+id/textView_flags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/flags_description"
            app:layout_gravity="center"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="@+id/spinner_time"
            app:layout_constraintLeft_toLeftOf="@+id/spinner_time"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner_time" />

        <CheckBox
            android:id="@+id/checkBox_opt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="@string/flag_opt1"
            app:layout_constraintRight_toLeftOf="@+id/checkBox_opt2"
            app:layout_constraintLeft_toLeftOf="@+id/textView_flags"
            app:layout_constraintBottom_toTopOf="@+id/checkBox_opt3"
            app:layout_constraintTop_toBottomOf="@+id/textView_flags" />

        <CheckBox
            android:id="@+id/checkBox_opt2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="@string/flag_opt2"
            app:layout_constraintRight_toRightOf="@+id/textView_flags"
            app:layout_constraintLeft_toRightOf="@+id/checkBox_opt1"
            app:layout_constraintBottom_toTopOf="@+id/checkBox_opt4"
            app:layout_constraintTop_toBottomOf="@+id/textView_flags" />

        <CheckBox
            android:id="@+id/checkBox_opt3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="@string/flag_opt3"
            app:layout_constraintLeft_toLeftOf="@+id/textView_flags"
            app:layout_constraintTop_toBottomOf="@+id/checkBox_opt1"
            app:layout_constraintRight_toLeftOf="@+id/checkBox_opt4"
            app:layout_constraintBottom_toTopOf="@+id/opt_switch" />

        <CheckBox
            android:id="@+id/checkBox_opt4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="@string/flag_opt4"
            app:layout_constraintRight_toRightOf="@+id/textView_flags"
            app:layout_constraintLeft_toRightOf="@+id/checkBox_opt3"
            app:layout_constraintBottom_toTopOf="@+id/opt_switch"
            app:layout_constraintTop_toBottomOf="@+id/checkBox_opt2" />


        <Button
            android:id="@+id/button_opt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_opt1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_gravity="center"
            app:layout_constraintRight_toLeftOf="@+id/button_opt2"
            android:layout_marginBottom="8dp" />
        <Button
            android:id="@+id/button_opt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/btn_opt2"
            app:layout_gravity="center"
            app:layout_constraintLeft_toRightOf="@+id/button_opt1"
            android:layout_marginBottom="8dp" />

</android.support.constraint.ConstraintLayout>
